{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@type/*": ["src/type/*"],
      "@util/*": ["src/util/*"],
      "@hooks/*": ["src/hooks/*"],
      "@assets/*": ["src/assets/*"],
      "@context/*": ["src/context/*"],
      "@screens/*": ["src/screens/*"],
      "@styles": ["src/styles/index.ts"],
      "@styles/*": ["src/styles/*"],
      "@constant": ["src/constant/index.ts"],
      "@components": ["src/components/index.ts"],
      "@navigators": ["src/navigators/index.ts"],
      "@navigators/*": ["src/navigators/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
